@model List<BasketVM>
@{
    ViewData["Title"] = "ShowBasket";
}

@if (Model.Count > 0)
{
    <div class="container">
        <div class="row">
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th scope="col">Image</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Count</th>
                        <th>Setting</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td> <img width="150" height="150" src="~/img/@item.ImagePath" /></td>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                            <td>
                                <a asp-controller="basket" asp-action="decrease" asp-route-id="@item.Id">-</a>
                                @item.BasketCount
                                <a asp-controller="basket" asp-action="increase" asp-route-id="@item.Id">+</a>
                            </td>
                            <td><a asp-controller="basket" asp-action="remove" asp-route-id="@item.Id">X</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="container">
        <div class="row">
            <h1>Basket is empty, add <a asp-controller="home" asp-action="index">product</a></h1>
        </div>
    </div>
}