@model List<Blog>

@foreach (var blog in Model)
{
    <div class="col-xl-4 col-md-6">
        <div class="post-item position-relative h-100">

            <div class="post-img position-relative overflow-hidden">
                <img src="~/img/@blog.ImagePath" class="img-fluid" alt="">
                <span class="post-date">@blog.Date.ToString("dd/MM/yyyy")</span>
            </div>

            <div class="post-content d-flex flex-column">

                <h3 class="post-title">@(blog.Title.Length > 30 ? blog.Title.Substring(0, 30) + "..." : blog.Title)</h3>


                <div class="meta d-flex align-items-center">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-person"></i> <span class="ps-2">@blog.Blogger</span>
                    </div>
                    <span class="px-3 text-black-50">/</span>
                    <div class="d-flex align-items-center">
                        <i class="bi bi-folder2"></i> <span class="ps-2">@blog.Category.Name</span>
                    </div>
                </div>

                <p>
                    @blog.Description
                </p>

                <hr>

                <a asp-controller="blog" asp-action="detail" asp-route-id="@blog.Id" class="readmore stretched-link"><span>Read More</span><i class="bi bi-arrow-right"></i></a>

            </div>

        </div>
    </div>

    <!-- End post list item -->
}

